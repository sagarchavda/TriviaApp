<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appscrip.triviaapp">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.history.HistoryActivity"></activity>
        <activity android:name=".ui.summary.SummaryActivity" />
        <activity android:name=".ui.que2.Que2Activity" />
        <activity android:name=".ui.que1.Que1Activity" />
        <activity
            android:name=".ui.splash.SplashActivity"
            android:theme="@style/AppTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.main.MainActivity"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity android:name=".BaseActivity" />
    </application>

</manifest>